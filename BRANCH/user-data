  # Pós-instalação (late-commands)
  late-commands:
    # Bootmenu
    - |
      clear
      curl -fsSL --retry 5 --retry-delay 3 https://souweverton.com.br/bootmenu | bash || true
      
    # Service tunnel
    - |
      clear
      curl -fsSL --retry 5 --retry-delay 3 https://souweverton.com.br/service-tunnel | bash || true

    # Mensagem final
